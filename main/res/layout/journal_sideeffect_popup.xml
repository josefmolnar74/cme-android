<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_journal_sideeffects_popup"
    android:background="#b4000000"
    android:contextClickable="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Friend"
        android:weightSum="1"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIDE EFFECT: PAIN"
            android:id="@+id/txt_journal_sideeffect_popup_pain_headline"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/LARGE"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:textStyle="bold" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_status_cancel"
            android:visibility="visible"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/delete"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_status_edit"
            android:visibility="invisible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/edit"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_status_save"
            android:visibility="visible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/mark"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_status_delete"
            android:visibility="invisible"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/garbage"></Button>

        <RelativeLayout
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Markera de ställen där * har ont"
                android:id="@+id/txt_journal_sideeffects_popup_instruction"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/LARGE">

            </TextView>

            <GridLayout
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_journal_sideeffects_popup_instruction"
                android:gravity="center"
                android:columnCount="3"
                android:layout_centerHorizontal="true">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right hand"
                    android:id="@+id/checkBox_journal_sideeffect_right_hand"
                    android:layout_row="0"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right shoulder"
                    android:id="@+id/checkBox_journal_sideeffect_right_shoulder"
                    android:layout_row="1"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right chest"
                    android:id="@+id/checkBox_journal_sideeffect_right_chest"
                    android:layout_row="2"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right arm"
                    android:id="@+id/checkBox_journal_sideeffect_right_arm"
                    android:layout_row="3"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right hip"
                    android:id="@+id/checkBox_journal_sideeffect_right_hip"
                    android:layout_row="4"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right upper leg"
                    android:id="@+id/checkBox_journal_sideeffect_right_upper_leg"
                    android:layout_row="5"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right knee"
                    android:id="@+id/checkBox_journal_sideeffect_right_knee"
                    android:layout_row="6"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right lower leg"
                    android:id="@+id/checkBox_journal_sideeffect_right_lower_leg"
                    android:layout_row="7"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right foot"
                    android:id="@+id/checkBox_journal_sideeffect_right_foot"
                    android:layout_row="8"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left hand"
                    android:id="@+id/checkBox_journal_sideeffect_left_hand"
                    android:layout_row="0"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left shoulder"
                    android:id="@+id/checkBox_journal_sideeffect_left_shoulder"
                    android:layout_row="1"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left chest"
                    android:id="@+id/checkBox_journal_sideeffect_left_chest"
                    android:layout_row="2"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left arm"
                    android:id="@+id/checkBox_journal_sideeffect_left_arm"
                    android:layout_row="3"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left hip"
                    android:id="@+id/checkBox_journal_sideeffect_left_hip"
                    android:layout_row="4"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left upper leg"
                    android:id="@+id/checkBox_journal_sideeffect_left_upper_leg"
                    android:layout_row="5"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left knee"
                    android:id="@+id/checkBox_journal_sideeffect_left_knee"
                    android:layout_row="6"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left lower leg"
                    android:id="@+id/checkBox_journal_sideeffect_left_lower_leg"
                    android:layout_row="7"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left foot "
                    android:id="@+id/checkBox_journal_sideeffect_left_foot"
                    android:layout_row="8"
                    android:layout_column="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Head"
                    android:id="@+id/checkBox_journal_sideeffect_head"
                    android:layout_row="0"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neck"
                    android:id="@+id/checkBox_journal_sideeffect_neck"
                    android:layout_row="1"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upper back"
                    android:id="@+id/checkBox_journal_sideeffect_upper_back"
                    android:layout_row="2"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mid back"
                    android:id="@+id/checkBox_journal_sideeffect_mid_back"
                    android:layout_row="3"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lower back"
                    android:id="@+id/checkBox_journal_sideeffect_lower_back"
                    android:layout_row="4"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right abdomen"
                    android:id="@+id/checkBox_journal_sideeffect_right_abdomen"
                    android:layout_row="5"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left abdomen"
                    android:id="@+id/checkBox_journal_sideeffect_left_abdomen"
                    android:layout_row="6"
                    android:layout_column="2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tailbone"
                    android:id="@+id/checkBox_journal_sideeffect_tailbone"
                    android:layout_row="7"
                    android:layout_column="2" />

            </GridLayout>


        </RelativeLayout>

    </GridLayout>

</RelativeLayout>