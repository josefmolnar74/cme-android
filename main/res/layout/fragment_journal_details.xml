                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_journal_sideeffect_checkbox1"
                    android:text="@string/journal_sideeffects_mouth_checkbox_sore" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_journal_sideeffect_checkbox2"
                    android:text="@string/journal_sideeffects_mouth_checkbox_dry" />

