<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cancercarecompany.ccc.ccc.JournalDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_journal_detail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/cme_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Biverkning"
                android:id="@+id/textView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="left|center_vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>


            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_save"
                android:background="@drawable/mark_white"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_delete"
                android:background="@drawable/garbage_white"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_save" />

        </RelativeLayout>

        <ScrollView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_journal_sideeffect_question"
                    android:text="Question"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/lay_journal_sideeffect_seekbars"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/lay_journal_sideeffect_seekbar1"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breakfast"
                            android:textSize="@dimen/MEDIUM" />

                        <SeekBar
                            android:id="@+id/sb_journal_sideeffect_seekbar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_below="@+id/txt_journal_sideeffect_seekbar_headline1"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_min1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/sb_journal_sideeffect_seekbar1"
                            android:text="Nothing" />

                        <TextView

                            android:id="@+id/txt_journal_sideeffect_seekbar_max1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/sb_journal_sideeffect_seekbar1"
                            android:text="Everything"/>

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_result1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/LARGE"
                            android:layout_alignEnd="@+id/sb_journal_sideeffect_seekbar1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_journal_sideeffect_seekbar2"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_headline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breakfast"
                            android:textSize="@dimen/MEDIUM" />

                        <SeekBar
                            android:id="@+id/sb_journal_sideeffect_seekbar2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_below="@+id/txt_journal_sideeffect_seekbar_headline2"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_min2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/sb_journal_sideeffect_seekbar2"
                            android:text="Nothing" />

                        <TextView

                            android:id="@+id/txt_journal_sideeffect_seekbar_max2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/sb_journal_sideeffect_seekbar2"
                            android:text="Everything"/>

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_result2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/LARGE"
                            android:layout_alignEnd="@+id/sb_journal_sideeffect_seekbar2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_journal_sideeffect_seekbar3"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_headline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinner"
                            android:textSize="@dimen/MEDIUM" />

                        <SeekBar
                            android:id="@+id/sb_journal_sideeffect_seekbar3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_below="@+id/txt_journal_sideeffect_seekbar_headline3"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_min3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/sb_journal_sideeffect_seekbar3"
                            android:text="Nothing" />

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_max3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/sb_journal_sideeffect_seekbar3"
                            android:text="Everything" />

                        <TextView
                            android:id="@+id/txt_journal_sideeffect_seekbar_result3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/LARGE"
                            android:layout_alignEnd="@+id/sb_journal_sideeffect_seekbar3" />

                    </RelativeLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/journal_notes"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Anteckningar"
                    android:layout_gravity="top"
                    android:gravity="top|left"
                    android:background="@android:drawable/editbox_background"
                    android:theme="@style/cme_custom_theme"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
