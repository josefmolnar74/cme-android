                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_journal_sideeffect_checkbox4"
                    android:text="@string/journal_sideeffects_mouth_checkbox_pain"/>

            </LinearLayout>

