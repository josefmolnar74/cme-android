                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/LARGE"
                            android:layout_alignEnd="@+id/sb_journal_sideeffect_seekbar2" />

                    </RelativeLayout>

                    <RelativeLayout
