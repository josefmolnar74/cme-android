                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/sb_journal_sideeffect_seekbar2"
                            android:text="Nothing" />

