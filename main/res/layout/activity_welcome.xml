<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    tools:context="com.cancercarecompany.ccc.ccc.WelcomeActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:textSize="50dp"
        android:layout_row="0"
        android:gravity="fill"
        android:layout_gravity="center"
        android:layout_columnSpan="3"  />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:gravity="fill"
        android:layout_gravity="center_horizontal"
        android:layout_columnSpan="3">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_create_care_team"
            android:id="@+id/create"
            android:onClick="onClickCreateCareTeam" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_join_care_team"
            android:id="@+id/join"
            android:onClick="onClickJoinCareTeam"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_login"
            android:id="@+id/login"
            android:onClick="onClickLogin"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnspan="1"
            android:gravity="fill"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:background="@drawable/careteam"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView7" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:background="@drawable/myjourney" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:background="@drawable/myjournal"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/imageView5" />

        </RelativeLayout>

    </LinearLayout>



</GridLayout>