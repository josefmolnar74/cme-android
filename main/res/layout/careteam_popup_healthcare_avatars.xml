<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/healthcare_avatars_popup"
    android:weightSum="1">

    <LinearLayout
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="5"
            android:background="@color/white">

            <ImageButton
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/btn_healthcare_avatar_1"
                android:background="@drawable/avatar_healthcare_doctor_female"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/btn_healthcare_avatar_2"
                android:background="@drawable/avatar_healthcare_nurse"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/btn_healthcare_avatar_3"
                android:background="@drawable/avatar_healthcare_anestetist"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/btn_healthcare_avatar_4"
                android:background="@drawable/avatar_healthcare_doctor_male"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/btn_healthcare_avatar_5"
                android:background="@drawable/avatar_healthcare_surgeon"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

        </GridLayout>

    </LinearLayout>

</RelativeLayout>