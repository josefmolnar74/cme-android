<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/careTeamScreen"
    tools:context="com.cancercarecompany.ccc.ccc.MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:id="@+id/topbarLinear"
        android:background="@color/cme_dark"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:background="@color/cme_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txt_patientName"
                android:text="@string/journal_patient_name"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_alignTop="@+id/txt_loggedIn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txt_loggedIn"
                android:text="name"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:background="@color/cme_dark">

            <ImageButton
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/btn_careteam_button"
                android:src="@drawable/careteam_start_icon"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/btn_journal_button" />

            <ImageButton
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/btn_journey_button"
                android:src="@drawable/journey_start_icon"
                android:scaleType="fitCenter"
                android:gravity="center"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btn_journal_button" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/btn_journal_button"
                android:gravity="center"
                android:src="@drawable/journal_start_icon"
                android:scaleType="fitCenter"
                android:background="@null"
                android:cropToPadding="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="0.84"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txt_journal_headline"
                android:id="@+id/txt_journal_header"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_journal_navigate_back"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/txt_journal_header"
                android:background="@drawable/back" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_journal_navigate_forward"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/txt_journal_header"
                android:background="@drawable/forward" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_journal_calendar" >

            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:theme="@style/AppTheme.NoActionBar"
                android:id="@+id/cal_journal_calendar" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:id="@+id/journal_scrollview" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/journal_status">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/journal_status_header"
                        android:id="@+id/txt_journal_status_header"
                        android:textSize="@dimen/LARGE"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="@color/cme_dark"
                        android:textColor="@color/white"
                        android:backgroundTintMode="src_in" />

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/img_journal_status_expand"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/layout_journal_status"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_journal_status_header"
                        android:background="@color/white"
                        android:transitionGroup="true">

                        <EditText
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="540dp"
                            android:layout_height="100dp"
                            android:id="@+id/edtxt_journal_status"
                            android:hint="Hur mår du ?"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:gravity="top"
                            android:background="@android:drawable/edit_text" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@+id/edtxt_journal_status"
                            android:layout_alignStart="@+id/edtxt_journal_status"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:id="@+id/btn_journal_emotions"
                                android:background="@drawable/cheeky" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Välj känsla"
                                android:id="@+id/txt_journal_emotions"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true" />

                        </LinearLayout>

                        <Button
                            android:layout_marginBottom="10dp"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Spara"
                            android:id="@+id/btn_journal_status_save"
                            android:layout_below="@+id/edtxt_journal_status"
                            android:layout_alignEnd="@+id/edtxt_journal_status"
                            android:background="@color/material_grey_50" />

                        <GridView
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="500dp"
                            android:layout_height="wrap_content"
                            android:numColumns="auto_fit"
                            android:horizontalSpacing="5dp"
                            android:columnWidth="80dp"
                            android:stretchMode="columnWidth"
                            android:id="@+id/gridview_journal_status"
                            android:layout_below="@+id/btn_journal_status_save"
                            android:layout_alignParentLeft="true" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/txt_journal_sideeffects_header"
                        android:id="@+id/journal_sideeffects_header"
                        android:textSize="@dimen/LARGE"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="@color/cme_dark"
                        android:textColor="@color/white"
                        android:backgroundTintMode="src_atop" />

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/img_journal_sideeffects_expand"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <GridLayout
                        android:visibility="gone"
                        android:id="@+id/layout_journal_sideeffects"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="1"
                        android:gravity="center"
                        android:layout_below="@+id/journal_sideeffects_header"
                        android:layout_alignParentLeft="true" >

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_fatigue"
                            android:id="@+id/btn_journal_sideeffect_fatigue"
                            android:drawableLeft="@drawable/journal_sideeffects_tiredness_resize"
                            android:padding="16dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_pain"
                            android:id="@+id/btn_journal_sideeffect_pain"
                            android:drawableLeft="@drawable/journal_sideeffects_pain_resize"
                            android:padding="16dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_mouth_change"
                            android:drawableLeft="@drawable/journal_sideeffects_mouth_resize"
                            android:id="@+id/btn_journal_sideeffect_mouth"
                            android:padding="16dp"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_tingling"
                            android:id="@+id/btn_journal_sideeffect_tingling"
                            android:drawableLeft="@drawable/journal_sideeffects_tingling_resize"
                            android:padding="16dp"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_diarrhea"
                            android:id="@+id/btn_journal_sideeffect_diarrhea"
                            android:drawableLeft="@drawable/journal_sideeffects_diarrhea_resize"
                            android:padding="16dp"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_appetite"
                            android:id="@+id/btn_journal_sideeffect_appetite"
                            android:drawableLeft="@drawable/journal_sideeffects_appetite_resize"
                            android:padding="16dp"
                            android:layout_row="5"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_dizziness"
                            android:id="@+id/btn_journal_sideeffect_dizziness"
                            android:drawableLeft="@drawable/journal_sideeffects_dizziness_resize"
                            android:padding="16dp"
                            android:layout_row="6"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_vomit"
                            android:id="@+id/btn_journal_sideeffect_vomit"
                            android:drawableLeft="@drawable/journal_sideeffects_vomit_resize"
                            android:padding="16dp"
                            android:layout_row="7"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/journal_sideeffects_other"
                            android:id="@+id/btn_journal_sideeffect_other"
                            android:drawableLeft="@drawable/journal_sideeffects_other_resize"
                            android:padding="16dp"
                            android:layout_row="8"
                            android:layout_column="0"
                            android:backgroundTint="@color/material_grey_50" />

                    </GridLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/journal_medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/txt_medicinering"
                        android:id="@+id/txt_journal_medication_header"
                        android:textSize="@dimen/LARGE"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="@color/cme_dark"
                        android:backgroundTintMode="src_in"
                        android:textColor="@android:color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/img_journal_medication_expand"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/layout_journal_medication"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_journal_medication_header">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:id="@+id/imageView8"
                            android:background="@drawable/journal_drugs"
                            android:scaleType="center"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:gravity="center_horizontal">

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/journal_medication_dinner"
                                android:id="@+id/btn_journal_medication_dinner" />

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/journal_medication_lunch"
                                android:id="@+id/btn_journal_medication_lunch" />

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/journal_medication_breakfast"
                                android:id="@+id/btn_journal_medication_breakfast" />
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/journal_beverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/journal_beverage_header"
                        android:id="@+id/txt_journal_beverage_header"
                        android:textSize="@dimen/LARGE"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/white"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="@color/cme_dark"
                        android:backgroundTintMode="src_in" />

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/img_journal_beverage_expand"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/layout_journal_beverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_journal_beverage_header"
                        android:layout_alignParentLeft="true">

                        <GridView
                            android:id="@+id/grd_journal_beverage"
                            android:layout_width="250dp"
                            android:layout_height="150dp"
                            android:numColumns="4"
                            android:horizontalSpacing="5dp"
                            android:verticalSpacing="20dp"
                            android:columnWidth="60dp"
                            android:stretchMode="columnWidth" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/txt_curr_events"
                        android:id="@+id/txt_journal_events_header"
                        android:textSize="@dimen/LARGE"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/white"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="@color/cme_dark"
                        android:backgroundTintMode="src_in" />

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/img_journal_events_expand"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <RelativeLayout
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_journal_events"
                        android:layout_below="@+id/txt_journal_events_header"
                        android:layout_alignParentLeft="true">

                        <Button
                            android:visibility="gone"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btn_journal_careteam_add_event"
                            android:background="@android:drawable/ic_input_add"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <ListView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/listview_journal_events"
                            android:layout_below="@+id/btn_journal_careteam_add_event" />


                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>

