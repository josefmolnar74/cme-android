<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_journal_sideeffect_diarrhea_popup"
    android:background="#b4000000"
    android:contextClickable="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cme_light"
        android:weightSum="1"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journal_sideeffects_diarrhea_header"
            android:id="@+id/txt_journal_sideeffects_diarrhea_popup_headline"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/LARGE"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:textStyle="bold" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_sideeffects_diarrhea_cancel"
            android:visibility="visible"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/delete"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_sideeffects_diarrhea_edit"
            android:visibility="invisible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/edit"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_sideeffects_diarrhea_save"
            android:visibility="visible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/mark"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_journal_sideeffects_diarrhea_delete"
            android:visibility="invisible"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/garbage"></Button>

        <RelativeLayout
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/cme_light"
            android:layout_width="450dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/journal_sideeffects_diarrhea_question"
                android:id="@+id/txt_journal_sideeffects_diarrhea_popup_question"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/LARGE">

            </TextView>

            <RadioGroup
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/rg_journal_sideeffects_dirrhea_popup"
                android:layout_below="@+id/txt_journal_sideeffects_diarrhea_popup_question">
                android:layout_alignParentLeft="true">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One"
                    android:id="@+id/rb_journal_sideeffects_diarrhea_popup_selection1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="244dp"
                    android:layout_marginEnd="244dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Two"
                    android:id="@+id/rb_journal_sideeffects_diarrhea_popup_selection2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="244dp"
                    android:layout_marginEnd="244dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Three"
                    android:id="@+id/rb_journal_sideeffects_diarrhea_popup_selection3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="244dp"
                    android:layout_marginEnd="244dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Four"
                    android:id="@+id/rb_journal_sideeffects_diarrhea_popup_selection4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="244dp"
                    android:layout_marginEnd="244dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More than 4"
                    android:id="@+id/rb_journal_sideeffects_diarrhea_popup_selection5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="244dp"
                    android:layout_marginEnd="244dp" />

            </RadioGroup>



        </RelativeLayout>

    </GridLayout>

</RelativeLayout>