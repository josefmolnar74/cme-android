<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cancercarecompany.ccc.ccc.JournalExpandListFragment">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_journal_headline"
            android:id="@+id/txt_journal_date"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_journal_navigate_back"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/txt_journal_date"
            android:background="@drawable/back"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_journal_navigate_forward"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_journal_date"
            android:background="@drawable/forward"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/img_calendar"
            android:background="@drawable/calendar"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_journal_calendar" >

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:theme="@style/cme_custom_theme"
            android:id="@+id/cal_journal_calendar" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lay_journal_sideeffect_seekbar_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cme_dark"
        android:layout_marginTop="1sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/journal_sideeffects_distress_seekbar_headline"
            android:textSize="@dimen/MEDIUM"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="37dp" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lay_journal_sideeffect_seekbar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <SeekBar
            android:id="@+id/sb_journal_sideeffects_distress_seekbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:layout_alignParentLeft="false"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/txt_journal_sideeffects_distress_seekbar_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sb_journal_sideeffects_distress_seekbar1"
            android:text="@string/journal_sideeffects_distress_seekbar_min" />

        <TextView

            android:id="@+id/txt_journal_sideeffects_distress_seekbar_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sb_journal_sideeffects_distress_seekbar1"
            android:text="@string/journal_sideeffects_distress_seekbar_max"/>

    </RelativeLayout>

    <ExpandableListView
        android:visibility="visible"
        android:id="@+id/explv_journal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

</LinearLayout>
