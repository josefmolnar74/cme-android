<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cancercarecompany.ccc.ccc.MainActivity"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/cme_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cme_dark"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_journal_screen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_journal_headline"
            android:id="@+id/txt_journal_header"
            android:textSize="@dimen/XLARGE" />

        <LinearLayout
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:baselineAligned="false"
            android:id="@+id/journal_main">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:id="@+id/journal_left_side">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false"
                    android:id="@+id/journal_scrollview" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/journal_status">

                            <TextView
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/journal_status_header"
                                android:id="@+id/txt_journal_status_header"
                                android:textSize="@dimen/LARGE"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <RelativeLayout
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_journal_status_header"
                                android:id="@+id/layout_journal_status_input"
                                android:background="@drawable/abc_list_selector_background_transition_holo_dark"
                                android:transitionGroup="true">

                                <EditText
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:layout_marginTop="@dimen/activity_vertical_margin"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                                    android:layout_width="540dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/edtxt_journal_status"
                                    android:hint="Hur mår du ?"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:gravity="top"
                                    android:background="@android:drawable/edit_text" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:layout_below="@+id/edtxt_journal_status"
                                    android:layout_alignStart="@+id/edtxt_journal_status"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageButton
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:scaleType="fitCenter"
                                        android:adjustViewBounds="true"
                                        android:id="@+id/btn_journal_emotions"
                                        android:background="@drawable/cheeky" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="Välj känsla"
                                        android:id="@+id/txt_journal_emotions"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentStart="true" />

                                </LinearLayout>

                                <Button
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="Spara"
                                    android:id="@+id/btn_journal_status_save"
                                    android:layout_below="@+id/edtxt_journal_status"
                                    android:layout_alignEnd="@+id/edtxt_journal_status"
                                    android:background="@color/material_grey_50" />


                            </RelativeLayout>

                            <GridView
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_width="500dp"
                                android:layout_height="wrap_content"
                                android:numColumns="auto_fit"
                                android:horizontalSpacing="5dp"
                                android:columnWidth="80dp"
                                android:stretchMode="columnWidth"
                                android:id="@+id/gridview_journal_status"
                                android:layout_below="@+id/layout_journal_status_input"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/journal_sideeffects">

                            <TextView
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/txt_journal_sideeffects_header"
                                android:id="@+id/journal_sideeffects_header"
                                android:textSize="@dimen/LARGE"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <GridLayout
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:columnCount="3"
                                android:gravity="center"
                                android:layout_below="@+id/journal_sideeffects_header"
                                android:layout_alignParentLeft="true" >

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_fatigue"
                                    android:id="@+id/btn_journal_sideeffect_fatigue"
                                    android:drawableLeft="@drawable/journal_sideeffects_tiredness_resize"
                                    android:padding="16dp"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_pain"
                                    android:id="@+id/btn_journal_sideeffect_pain"
                                    android:drawableLeft="@drawable/journal_sideeffects_pain_resize"
                                    android:padding="16dp"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_mouth_change"
                                    android:drawableLeft="@drawable/journal_sideeffects_mouth_resize"
                                    android:id="@+id/btn_journal_sideeffect_mouth"
                                    android:padding="16dp"
                                    android:layout_row="0"
                                    android:layout_column="2"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_tingling"
                                    android:id="@+id/btn_journal_sideeffect_tingling"
                                    android:drawableLeft="@drawable/journal_sideeffects_tingling_resize"
                                    android:padding="16dp"
                                    android:layout_row="1"
                                    android:layout_column="0"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_diarrhea"
                                    android:id="@+id/btn_journal_sideeffect_diarrhea"
                                    android:drawableLeft="@drawable/journal_sideeffects_diarrhea_resize"
                                    android:padding="16dp"
                                    android:layout_row="1"
                                    android:layout_column="1"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_appetite"
                                    android:id="@+id/btn_journal_sideeffect_appetite"
                                    android:drawableLeft="@drawable/journal_sideeffects_appetite_resize"
                                    android:padding="16dp"
                                    android:layout_row="1"
                                    android:layout_column="2"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_dizziness"
                                    android:id="@+id/btn_journal_sideeffect_dizziness"
                                    android:drawableLeft="@drawable/journal_sideeffects_dizziness_resize"
                                    android:padding="16dp"
                                    android:layout_row="2"
                                    android:layout_column="0"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_vomit"
                                    android:id="@+id/btn_journal_sideeffect_vomit"
                                    android:drawableLeft="@drawable/journal_sideeffects_vomit_resize"
                                    android:padding="16dp"
                                    android:layout_row="2"
                                    android:layout_column="1"
                                    android:backgroundTint="@color/material_grey_50" />

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:text="@string/journal_sideeffects_other"
                                    android:id="@+id/btn_journal_sideeffect_other"
                                    android:drawableLeft="@drawable/journal_sideeffects_other_resize"
                                    android:padding="16dp"
                                    android:layout_row="2"
                                    android:layout_column="2"
                                    android:backgroundTint="@color/material_grey_50" />

                            </GridLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:baselineAligned="false">

                            <RelativeLayout
                                android:id="@+id/journal_medication"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/txt_medicinering"
                                    android:id="@+id/txt_journal_medication_header"
                                    android:textSize="@dimen/LARGE"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                                <RelativeLayout
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:layout_marginTop="@dimen/activity_vertical_margin"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_journal_medication_header">

                                    <ImageView
                                        android:layout_width="200dp"
                                        android:layout_height="200dp"
                                        android:id="@+id/imageView8"
                                        android:background="@drawable/journal_drugs"
                                        android:scaleType="center"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:gravity="center_horizontal">

                                        <Button
                                            style="?android:attr/buttonStyleSmall"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/journal_medication_dinner"
                                            android:id="@+id/btn_journal_medication_dinner" />

                                        <Button
                                            style="?android:attr/buttonStyleSmall"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/journal_medication_lunch"
                                            android:id="@+id/btn_journal_medication_lunch" />

                                        <Button
                                            style="?android:attr/buttonStyleSmall"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/journal_medication_breakfast"
                                            android:id="@+id/btn_journal_medication_breakfast" />
                                    </LinearLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/journal_beverage"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/journal_beverage_header"
                                    android:id="@+id/txt_journal_beverage_header"
                                    android:textSize="@dimen/LARGE"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                                <GridView
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:layout_marginTop="@dimen/activity_vertical_margin"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                                    android:layout_width="250dp"
                                    android:layout_height="200dp"
                                    android:numColumns="4"
                                    android:horizontalSpacing="5dp"
                                    android:verticalSpacing="20dp"
                                    android:columnWidth="60dp"
                                    android:stretchMode="columnWidth"
                                    android:id="@+id/grd_journal_beverage"
                                    android:layout_below="@+id/txt_journal_beverage_header"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                            </RelativeLayout>

                        </LinearLayout>

                        <Button
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_width="200dp"
                            android:layout_height="80dp"
                            android:drawableLeft="@drawable/report_icon"
                            android:text="Skapa rapport"
                            android:padding="16dp"
                            android:backgroundTint="@color/cme_light" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:id="@+id/journal_right_side">

                <CalendarView
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:theme="@style/AppTheme.NoActionBar"
                    android:id="@+id/cal_journal_calendar" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/txt_journal_events_header"
                        android:text="@string/txt_curr_events"
                        android:textSize="@dimen/LARGE"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/btn_journal_careteam_add_event"
                        android:background="@android:drawable/ic_input_add"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listview_journal_events"
                    android:visibility="visible" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>