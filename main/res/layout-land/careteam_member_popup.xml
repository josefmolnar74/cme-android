<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_careteam_member_popup"
    android:background="#b4000000"
    android:contextClickable="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cme_light"
        android:weightSum="1"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite new care team member"
            android:id="@+id/txt_careteam_invite_headline"
            android:visibility="invisible"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_careteam_cancel"
            android:visibility="visible"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/delete"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_careteam_edit"
            android:visibility="visible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/edit"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_careteam_save"
            android:visibility="visible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/mark"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_careteam_delete"
            android:visibility="invisible"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/garbage"></Button>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:id="@+id/img_profilePic_careteam"
                    android:src="@drawable/profilepic"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner" />

            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="FÃ¶rnamn:"
                    android:id="@+id/lbl_firstName_careteam"
                    android:textSize="20dp"
                    android:layout_row="0"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/txt_firstName_careteam"
                    android:inputType="textPersonName"
                    android:textSize="20dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Efternamn:"
                    android:id="@+id/lbl_lastName_careteam"
                    android:textSize="20dp"
                    android:layout_row="1"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/txt_lastName_careteam"
                    android:text=""
                    android:inputType="textPersonName"
                    android:textSize="20dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Epost:"
                    android:id="@+id/lbl_email_careteam"
                    android:textSize="20dp"
                    android:layout_row="2"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/txt_email_careteam"
                    android:inputType="textEmailAddress"
                    android:textSize="20dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Telefon:"
                    android:id="@+id/lbl_phone_careteam"
                    android:textSize="20dp"
                    android:layout_row="3"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text=""
                    android:id="@+id/txt_phone_careteam"
                    android:textSize="20dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Relation:"
                    android:id="@+id/lbl_relation_careteam"
                    android:textSize="20dp"
                    android:layout_row="4"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/txt_careteam_relation"
                    android:textSize="20dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Admin:"
                    android:id="@+id/lbl_admin_careteam"
                    android:textSize="20dp"
                    android:layout_row="5"
                    android:layout_column="0" />

                <Spinner
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/spinner_admin_careteam"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dialog"
                    android:layout_row="5"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="First name and email must be specified"
                    android:id="@+id/txt_careteam_invite_alert"
                    android:textSize="20dp"
                    android:layout_row="6"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:textColor="#ff0000"
                    android:visibility="invisible" />

            </GridLayout>

        </LinearLayout>

    </GridLayout>

</RelativeLayout>