<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1000dp"

    android:id="@+id/add_event_popup"
    android:weightSum="100"
    android:background="@drawable/borderpopup"
    android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="80dp"
        android:id="@+id/frameLayout"
        android:layout_alignParentTop="true"></FrameLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory1"
        android:layout_marginLeft="10dp"
        android:background="@drawable/greenbubble"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory2"
        android:layout_marginLeft="20dp"
        android:background="@drawable/pinkbubble"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_subcategory1"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory3"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bluebubble"
        android:layout_toRightOf="@+id/img_subcategory2"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory4"
        android:layout_marginLeft="20dp"
        android:background="@drawable/orangebubblee"
        android:layout_toRightOf="@+id/img_subcategory3"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory5"
        android:background="@drawable/greenbubble"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_subcategory4"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory6"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/imageView11"
        android:background="@drawable/pinkbubble"
        android:layout_toRightOf="@+id/img_subcategory5"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory7"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bluebubble"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_toRightOf="@+id/img_subcategory6"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_subcategory8"
        android:layout_marginLeft="20dp"
        android:background="@drawable/orangebubble"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_subcategory7"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewAddEvent"
        android:layout_below="@+id/frameLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/txt_notes_journey"
                android:clickable="true"
                android:editable="true"
                android:inputType="text"
                android:hint="Notes"
                android:lines="5"
                android:layout_alignTop="@+id/timepicker_journey"
                android:layout_alignParentEnd="false"
                android:layout_toRightOf="@+id/timepicker_journey" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timepicker_journey"
                android:timePickerMode="spinner"
                android:layout_alignParentEnd="false"
                android:layout_toRightOf="@+id/datepicker_journey"
                android:layout_alignTop="@+id/datepicker_journey" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:id="@+id/datepicker_journey"
                android:layout_alignParentStart="false"
                android:calendarViewShown="false"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/img_page1" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txt_subcategory_main"
                android:layout_alignParentStart="false"
                android:layout_marginTop="10dp"
                android:text="Kirurgi är samma sak som att ha en operation. En operation gör man för att kunna ta bort en tumör till exempel. Det är Kirurgen som gör detta jobbet tillsammans med ett helt team av människor som hjälper till.  Under operationen kommer kirurgen att ta bort tumören och kanske lite till runt om tumören för att vara säker på att man fick med allt det dåliga. "
                android:layout_below="@+id/txt_subcategory_journey"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/img_page1" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Save"
                android:id="@+id/btn_saveEvent_Journey"
                android:background="@drawable/mark"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_above="@+id/timepicker_journey"
                android:layout_alignStart="@+id/txt_subcategory_main" />

            <ImageView
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:background="@drawable/cancerone"
                android:id="@+id/img_subcategory_main"
                android:layout_below="@+id/txt_subcategory_journey"
                android:layout_alignParentEnd="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/img_page3" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/img_page1" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/bluecircle"
                android:id="@+id/img_page1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/img_subcategory_main"
                android:layout_toLeftOf="@+id/img_page2" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/blackcircle"
                android:id="@+id/img_page2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/img_subcategory_main" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/blackcircle"
                android:id="@+id/img_page3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/img_subcategory_main"
                android:layout_toRightOf="@+id/img_page2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Category"
                android:id="@+id/txt_subcategory_journey"
                android:textSize="35dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_cancel_addevent"
        android:background="@drawable/close"
        android:layout_alignBottom="@+id/img_subcategory8"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp" />

</RelativeLayout>