<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="800dp"
    android:layout_height="600dp"
    android:id="@+id/add_event_popup"
    android:weightSum="100"
    android:background="@drawable/borderpopup">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/img_category_addevent_journey"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/txt_category_journey"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_notes_journey"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:editable="true"
                android:inputType="text"
                android:hint="Description"
                android:layout_below="@+id/datepicker_journey"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timepicker_journey"
                android:timePickerMode="spinner"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="false"
                android:layout_toRightOf="@+id/datepicker_journey"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/imageButton"
                android:background="#ffffff" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:id="@+id/datepicker_journey"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:calendarViewShown="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/imageButton"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Category"
                android:id="@+id/txt_category_journey"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="35dp"
                android:layout_marginLeft="20dp" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="380dp"
                android:id="@+id/scrollView"
                android:layout_below="@+id/img_category_addevent_journey"
                android:layout_marginTop="20dp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView7"
                android:layout_below="@+id/img_category_addevent_journey"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Kirurgi är samma sak som att ha en operation. En operation gör man för att kunna ta bort en tumör till exempel. Det är Kirurgen som gör detta jobbet tillsammans med ett helt team av människor som hjälper till.  Under operationen kommer kirurgen att ta bort tumören och kanske lite till runt om tumören för att vara säker på att man fick med allt det dåliga. "
                android:autoText="false" />
            </ScrollView>
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Save"
                android:id="@+id/btn_saveEvent_Journey"
                android:layout_alignParentBottom="true"
                android:background="@drawable/mark"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:background="@drawable/cancerone"
                android:id="@+id/imageView5"
                android:layout_toRightOf="@+id/scrollView"
                android:layout_below="@+id/img_category_addevent_journey"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_below="@+id/imageButton2"
                android:layout_marginTop="10dp"
                android:id="@+id/frameLayout"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@+id/imageView5"
                android:background="#000000"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:layout_width="60dp"
                android:background="@drawable/rightarrow"
                android:layout_height="50dp"
                android:id="@+id/imageButton"
                android:layout_alignTop="@+id/imageButton2"
                android:layout_toEndOf="@+id/txt_category_journey"
                android:visibility="visible" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/back"
                android:id="@+id/imageButton2"
                android:layout_toStartOf="@+id/imageView5"
                android:layout_marginTop="100dp"
                android:layout_marginRight="40dp"
                android:layout_below="@+id/scrollView"
                android:visibility="visible" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/bluecircle"
                android:id="@+id/imageView6"
                android:layout_toLeftOf="@+id/imageView7"
                android:layout_below="@+id/imageView5"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/blackcircle"
                android:id="@+id/imageView7"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/blackcircle"
                android:id="@+id/imageView8"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_below="@+id/imageView5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>