<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_careteam_healthcare_popup"
    android:background="#b4000000"
    android:contextClickable="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Friend"
        android:weightSum="1"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_healthcare_cancel"
            android:visibility="visible"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/delete"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_healthcare_edit"
            android:visibility="visible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/edit"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_healthcare_save"
            android:visibility="visible"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/mark"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_healthcare_delete"
            android:visibility="visible"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/garbage"></Button>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:id="@+id/img_profilePic_careteam"
                    android:src="@drawable/profilepic"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Title:"
                    android:id="@+id/text_healthcare_title"
                    android:textSize="20dp"
                    android:layout_row="0"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/edittext_healthcare_title"
                    android:hint="Please specify"
                    android:inputType="textPersonName"
                    android:textSize="20dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Name:"
                    android:id="@+id/text_healthcare_name"
                    android:textSize="20dp"
                    android:layout_row="1"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/edittext_healthcare_name"
                    android:text=""
                    android:inputType="textPersonName"
                    android:textSize="20dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Department:"
                    android:id="@+id/text_healthcare_department"
                    android:textSize="20dp"
                    android:layout_row="2"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/edittext_healthcare_department"
                    android:hint="Please specify"
                    android:inputType="textEmailAddress"
                    android:textSize="20dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Phone number 1:"
                    android:id="@+id/text_healthcare_phonenumber1"
                    android:textSize="20dp"
                    android:layout_row="3"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text=""
                    android:id="@+id/edittext_healthcare_phonenumber1"
                    android:textSize="20dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Phone Number 2:"
                    android:id="@+id/text_healthcare_phonenumber2"
                    android:textSize="20dp"
                    android:layout_row="4"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/edittext_healthcare_phonenumber2"
                    android:textSize="20dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Phone number 3:"
                    android:id="@+id/text_healthcare_phonenumber3"
                    android:textSize="20dp"
                    android:layout_row="5"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/edittext_healthcare_phonenumber3"
                    android:textSize="20dp"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Email:"
                    android:id="@+id/text_healthcare_email"
                    android:textSize="20dp"
                    android:layout_row="6"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/edittext_healthcare_email"
                    android:textSize="20dp"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Title and one phone number1 must be specified"
                    android:id="@+id/txt_careteaminvite_alerttext"
                    android:textSize="20dp"
                    android:layout_row="7"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:textColor="#ff0000"
                    android:visibility="invisible"/>

            </GridLayout>

        </LinearLayout>

    </GridLayout>

</RelativeLayout>
