<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/journeyLayout"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/topbarLinear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/cme_dark">

        <ImageButton
            android:layout_width="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/logoButton"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_icon"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/contactsButton"
            android:src="@drawable/careteam_start_icon"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/journalButton"
            android:layout_toStartOf="@+id/journalButton" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/journeyButton"
            android:src="@drawable/journey_start_icon"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/txt_journey_loggedIn" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/journalButton"
            android:gravity="center"
            android:src="@drawable/journal_start_icon"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/journeyButton"
            android:layout_toStartOf="@+id/journeyButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txt_journey_loggedIn"
            android:text="name"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txt_journey_patient_name"
            android:text="@string/journal_patient_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/logoButton"
            android:textColor="@color/white" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/journeyscreen"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="92">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="92"
            android:id="@+id/layerCoantainerJourney"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/linearLayout">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_background"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/backgroundjourneyxml"
                    android:id="@+id/relativeLayout_background"
                    android:layout_height="fill_parent">

                    <RelativeLayout
                        android:id="@+id/cloud_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"></RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/big_mountains_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="125px"></RelativeLayout>
                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_background2"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/relativeLayout_background2"
                    android:layout_height="fill_parent" >

                    <RelativeLayout
                        android:id="@+id/mountains_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="135px"></RelativeLayout>
                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_lion" >

                <RelativeLayout
                    android:id="@+id/lion_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="155px">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_lion"
                        android:background="@drawable/lionnaked"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="false" />

                    <ImageView
                        android:background="@drawable/sign1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sign1" />

                    <ImageView
                       android:background="@drawable/sign2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sign2" />

                    <ImageView
                        android:background="@drawable/sign3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sign3" />
                </RelativeLayout>


            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_background3" >

                <RelativeLayout
                    android:id="@+id/relativeLayout_background3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >

                    <RelativeLayout
                        android:id="@+id/bushes_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="130px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="visible">
                    </RelativeLayout>



                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_roadlayer"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/relativeLayout_roadlayout"
                    android:layout_height="fill_parent"
                    android:background="@drawable/border">

                    <RelativeLayout
                        android:id="@+id/roadlayer"
                        android:layout_width="fill_parent"
                        android:background="@drawable/roadxml"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"></RelativeLayout>

                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="300dp"
                        android:tileMode="repeat"
                        android:id="@+id/img_car_journey"
                        android:adjustViewBounds="true"
                        android:src="@drawable/bus"
                        android:visibility="visible"
                        android:layout_gravity="bottom|left"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="20dp" />

                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:id="@+id/Scroll_Bushes" >

                <RelativeLayout
                    android:id="@+id/front_bushes_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_eventlayer"
                android:scrollbars="none"
                android:fillViewport="false">

                <RelativeLayout
                    android:animateLayoutChanges="true"
                    android:layout_width="wrap_content"
                    android:id="@+id/relativeLayout_eventlayer"
                    android:layout_height="fill_parent">

                </RelativeLayout>
            </HorizontalScrollView>

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/btn_sun_journey"
                android:background="@drawable/sun"
                android:layout_gravity="right"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/relativeLayout3"
                android:layout_alignParentTop="false"
                android:columnCount="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border">

                <ImageButton
                    android:gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="matrix"
                    android:id="@+id/btn_appointment_journey"
                    android:background="@drawable/event_medical_oncologist_bubble"
                    android:onClick="addTreatment"
                    android:layout_marginTop="40dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_treatment_journey"
                    android:background="@drawable/event_cytostatika_bubble"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="40dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:onClick="addTreatment"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_test_journey"
                    android:background="@drawable/event_bloodtest_bubble"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="40dp"
                    android:onClick="addTreatment"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_foto_journey"
                    android:background="@drawable/photo"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop"
                    android:onClick="addTreatment"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_hospital_journey"
                    android:background="@drawable/event_hospital_bubble"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop"
                    android:onClick="addTreatment"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_gravity="center_horizontal" />


            </GridLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
