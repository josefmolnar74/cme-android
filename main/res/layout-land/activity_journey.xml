<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="12"
        android:background="@drawable/border"
        android:weightSum="100"
        android:id="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/logoButton"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            android:background="@null"
            android:layout_weight="10"
            android:layout_marginLeft="20dp" />


        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/contactsButton"
            android:layout_weight="16"
            android:padding="8dp"
            android:src="@drawable/careteam"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/journeyButton"
            android:layout_weight="16"
            android:padding="4dp"
            android:src="@drawable/myjourney"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_marginLeft="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/journalButton" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/myWallButton"
            android:layout_weight="16"
            android:padding="4dp"
            android:src="@drawable/cwall"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_marginLeft="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/journeyButton" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/journalButton"
            android:layout_weight="16"
            android:padding="8dp"
            android:src="@drawable/myjournal"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/contactsButton"
            android:layout_marginLeft="28dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:id="@+id/userSettingsButton"
            android:layout_weight="10"
            android:background="@null"
            android:src="@drawable/settings"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/myWallButton"
            android:layout_marginLeft="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/loggedIn"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logoButton"
            android:layout_toEndOf="@+id/logoButton"
            android:layout_marginLeft="100dp" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/Scroll_event_journey"
        android:scrollbars="none"
        android:layout_weight="63"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/relativeLayout3"
        android:background="#bcff92"
        android:layout_below="@+id/scroll_heaven_journey"
        android:layout_alignParentBottom="true">

        <RelativeLayout
           android:layout_width="880dp"
            android:id="@+id/eventLayoutJourney"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/img_car_journey"
                android:layout_alignTop="@+id/horizontalScrollView"
                android:src="@drawable/car"
                android:layout_alignParentStart="false"
                android:layout_marginTop="106dp" />
        </RelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/accent_material_dark"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentTop="false">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_surgery_journey"
            android:src="@drawable/kirurgi"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="addTreatment"
            android:layout_marginTop="80dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_xray_journey"
            android:src="@drawable/xray"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btn_surgery_journey"
            android:onClick="addTreatment"
            android:layout_alignStart="@+id/btn_surgery_journey" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_heart_journey"
            android:src="@drawable/heartex"
            android:scaleType="centerCrop"
            android:layout_below="@+id/btn_xray_journey"
            android:onClick="addTreatment"
            android:layout_alignStart="@+id/btn_xray_journey"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_blood_journey"
            android:src="@drawable/blodtest"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btn_heart_journey"
            android:onClick="addTreatment"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_dialys_journey"
            android:src="@drawable/dialys"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="addTreatment"
            android:layout_below="@+id/btn_blood_journey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Treatments"
            android:id="@+id/lbl_treatment_journey"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_heaven_journey"
        android:scrollbars="none"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/relativeLayout3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/heavenRelativeLayout"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false">

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/btn_cloud1_journey"
                android:background="@drawable/cloud"
                android:layout_alignParentStart="false"
                android:layout_alignParentRight="true" />

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/btn_cloud2_journey"
                android:background="@drawable/cloud"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="500dp" />

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/btn_cloud3_journey"
                android:background="@drawable/cloud"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="1000dp" />

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/btn_cloud4_journey"
                android:background="@drawable/cloud"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true"
                android:visibility="invisible"
                android:layout_marginLeft="1500dp" />

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/btn_cloud5_journey"
                android:background="@drawable/cloud"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true"
                android:visibility="invisible"
                android:layout_marginLeft="2000dp" />

        </RelativeLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="1000dp"
        android:layout_height="180dp"
        android:id="@+id/scroll_bottom_journey"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/relativeLayout3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/bottom_layout"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree2"
                android:layout_marginLeft="500dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree3"
                android:layout_marginLeft="1000dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree4"
                android:layout_marginLeft="1500dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree5"
                android:layout_marginLeft="2000dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree6"
                android:layout_marginLeft="2500dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree7"
                android:layout_marginLeft="3000dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree8"
                android:layout_marginLeft="3500dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree9"
                android:layout_marginLeft="4000dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree10"
                android:layout_marginLeft="4500dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree11"
                android:layout_marginLeft="5000dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree12"
                android:layout_marginLeft="5500dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tree"
                android:id="@+id/tree13"
                android:layout_marginLeft="6000dp" />
        </RelativeLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/img_sun_journey"
        android:src="@drawable/sun"
        android:visibility="invisible"
        android:layout_below="@+id/relativeLayout"
        android:layout_toLeftOf="@+id/relativeLayout3" />

</RelativeLayout>
