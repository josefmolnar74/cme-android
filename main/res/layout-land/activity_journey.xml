<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/journeyLayout"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/topbarLinear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/cme_dark">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/logoButton"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            android:background="@null"
            android:layout_weight="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/contactsButton"
            android:layout_weight="16"
            android:padding="8dp"
            android:src="@drawable/careteam"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/journalButton"
            android:layout_toStartOf="@+id/journalButton" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/journeyButton"
            android:layout_weight="16"
            android:padding="4dp"
            android:src="@drawable/myjourney"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txt_journal_loggedIn"
            android:layout_toStartOf="@+id/txt_journal_loggedIn"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/journalButton"
            android:layout_weight="16"
            android:padding="8dp"
            android:src="@drawable/myjournal"
            android:scaleType="fitCenter"
            android:background="@null"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/journeyButton"
            android:layout_toStartOf="@+id/journeyButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txt_journal_loggedIn"
            android:text="name"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txt_journey_patient_name"
            android:text="@string/journal_patient_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/logoButton"
            android:textColor="@color/white" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/journeyscreen"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="92">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="92"
            android:id="@+id/layerCoantainerJourney"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/linearLayout">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_background"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="40000dp"
                    android:background="@drawable/backgroundjourneyxml"
                    android:id="@+id/relativeLayout_background"
                    android:layout_height="fill_parent">

                    <RelativeLayout
                        android:layout_width="7000dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cloudjourneyxml"></RelativeLayout>
                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_background2"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:id="@+id/relativeLayout_background2"
                    android:layout_height="fill_parent" >

                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_background3" >

                <RelativeLayout
                    android:id="@+id/relativeLayout_background3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <RelativeLayout
                        android:id="@+id/big_mountain_layer"
                        android:layout_width="10000dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/backhillxml"
                        android:layout_marginBottom="65dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true">
                    </RelativeLayout>
                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_roadlayer"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:id="@+id/relativeLayout_roadlayout"
                    android:layout_height="fill_parent">

                    <RelativeLayout
                        android:id="@+id/roadlayer"
                        android:layout_width="50000dp"
                        android:background="@drawable/roadxml"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"></RelativeLayout>

                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="300dp"
                        android:tileMode="repeat"
                        android:id="@+id/img_car_journey"
                        android:adjustViewBounds="true"
                        android:src="@drawable/car"
                        android:visibility="visible"
                        android:layout_gravity="bottom|left"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="20dp" />

                </RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:id="@+id/Scroll_Bushes" >

                <RelativeLayout
                    android:id="@+id/bushesLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></RelativeLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Scroll_eventlayer"
                android:scrollbars="none"
                android:fillViewport="false">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/relativeLayout_eventlayer"
                    android:layout_height="fill_parent">

                </RelativeLayout>
            </HorizontalScrollView>

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/btn_sun_journey"
                android:background="@drawable/sun"
                android:layout_gravity="right"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/relativeLayout3"
                android:layout_alignParentTop="false"
                android:background="@color/white">

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="matrix"
                    android:id="@+id/btn_appointment_journey"
                    android:background="@drawable/appointment"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:onClick="addTreatment"
                    android:layout_marginTop="50dp" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_treatment_journey"
                    android:background="@drawable/otherdrop"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/btn_appointment_journey"
                    android:onClick="addTreatment"
                    android:layout_alignStart="@+id/btn_appointment_journey" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/btn_test_journey"
                    android:background="@drawable/test"
                    android:scaleType="centerCrop"
                    android:layout_below="@+id/btn_treatment_journey"
                    android:onClick="addTreatment"
                    android:layout_alignStart="@+id/btn_treatment_journey"
                    android:layout_marginTop="40dp" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:id="@+id/btn_foto_journey"
                    android:background="@drawable/photo"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/btn_test_journey"
                    android:onClick="addTreatment"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:id="@+id/btn_hospital_journey"
                    android:background="@drawable/hospital"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="63dp"
                    android:onClick="addTreatment"
                    android:layout_below="@+id/btn_foto_journey"
                    android:layout_centerHorizontal="true" />

                <FrameLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="#000000"></FrameLayout>


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
