<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cancercarecompany.ccc.ccc.MainActivity"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:weightSum="1">

<android.support.v7.widget.Toolbar
        android:id="@+id/cme_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cme_dark"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/careTeamMain"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <FrameLayout
                android:id="@+id/careteam_placeholder1"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/careteam_placeholder2"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>